<div class="w-full h-screen flex flex-col gap-10 px-24 py-10">
  <!-- Verifica e exibe os erros de validação -->
  <% if food.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-6">
      <h2 class="text-xl font-semibold">
        <%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:
      </h2>

      <ul class="list-disc pl-5 mt-2">
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Formulário de criação/edição de alimentos -->
  <%= form_with(model: food, class: "flex flex-col gap-6") do |form| %>

    <div class="flex flex-col gap-2">
      <%= form.label :name, "Name", class: "text-gray-700 text-lg" %>
      <%= form.text_field :name, class: "p-2 border rounded-lg w-full" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= form.label :protein, "Proteins (g)", class: "text-gray-700 text-lg" %>
      <%= form.text_field :protein, class: "p-2 border rounded-lg w-full" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= form.label :lipid, "Lipids (g)", class: "text-gray-700 text-lg" %>
      <%= form.text_field :lipid, class: "p-2 border rounded-lg w-full" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= form.label :carbohydrate, "Carbohydrates (g)", class: "text-gray-700 text-lg" %>
      <%= form.text_field :carbohydrate, class: "p-2 border rounded-lg w-full" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= form.label :food_group_id, "Food Group", class: "text-gray-700 text-lg" %>
      <%= form.collection_select :food_group_id, @food_groups, :id, :name, { prompt: "Select a food group" }, class: "p-2 border rounded-lg w-full" %>
    </div>

    <div>
      <%= form.submit "Save", class: "bg-blue-500 text-white p-3 rounded-lg hover:bg-blue-600 transition-colors duration-200 w-full text-center" %>
    </div>

  <% end %>
</div>
