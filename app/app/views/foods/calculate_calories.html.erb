<div class="w-full h-screen flex flex-col gap-14 px-24">
  <h1 class="text-4xl font-bold text-blue-600">Calcular Calorias para <%= @food.name %></h1>

  <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition-shadow duration-300">
    <p class="text-lg text-gray-700 mb-4">
      <strong>Quantidade informada:</strong> <%= params[:quantity] %> g
    </p>
    <p class="text-lg text-gray-700 mb-6">
      <strong>Total de calorias:</strong> <%= @calories %> kcal
    </p>

    <div class="flex justify-start">
      <%= link_to 'Voltar', food_path(@food), class: "bg-blue-500 text-white p-3 rounded-lg hover:bg-blue-600 transition-colors duration-200 w-32 text-center" %>
    </div>
  </div>
</div>
